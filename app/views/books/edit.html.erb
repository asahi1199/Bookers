<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error-explanation">
    <% if @book.errors.count == 1 %>
      <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <% else %>
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <% end %>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <% if @book.errors[:title].any? %>
      <div class="field_with_errors">
    <% end %>
    <label>Title</label>
    <% if @book.errors[:title].any? %>
      </div>
    <% end %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <% if @book.errors[:body].any? %>
      <div class="field_with_errors">
    <% end %>
    <label>Body</label>
    <% if @book.errors[:body].any? %>
      </div>
    <% end %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<div class="mult-link">
  <%= link_to "Show", "/books/#{@book.id}" %>
  |
  <%= link_to "Back", "/books" %>
</div>